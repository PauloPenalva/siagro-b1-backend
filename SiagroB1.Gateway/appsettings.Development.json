{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SiagroCommon": "Server=localhost;Database=IDX_SIAGRO_COMMON;User Id=sa;Password=IdxSist3m@s;TrustServerCertificate=True;"
  },
  "ReverseProxy": {
    "Routes": {
      "odata-route": {
        "ClusterId": "odata-cluster",
        "Match": {
          "Path": "/odata/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {JwtToken}"
          },
          {
            "RequestHeader": "X-User-Id",
            "Set": "{UserId}"
          }
        ]
      },
      "reports-route": {
        "ClusterId": "reports-cluster",
        "Match": {
          "Path": "/api/reports/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeader": "Authorization",
            "Set": "Bearer {JwtToken}"
          }
        ]
      }
    },
    "Clusters": {
      "odata-cluster": {
        "Destinations": {
          "odata-destination": {
            "Address": "http://localhost:50000/"
          }
        }
      },
      "reports-cluster": {
        "Destinations": {
          "reports-destination": {
            "Address": "http://localhost:8081/"
          }
        }
      }
    }
  }
}
